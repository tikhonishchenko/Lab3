<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DatePicker x:Name="DatePicker" HorizontalAlignment="Left" Margin="30,157,0,0" VerticalAlignment="Top" SelectedDateChanged="DateChanged"/>
        <TextBlock x:Name="HoroscopeEnglish" HorizontalAlignment="Left" Margin="370,146,0,0" TextWrapping="Wrap" Text="Західний гороскоп " VerticalAlignment="Top" Height="16" RenderTransformOrigin="0.49,0.61"/>
        <TextBlock x:Name="HoroscopeAsian" HorizontalAlignment="Left" Margin="370,168,0,0" TextWrapping="Wrap" Text="Китайський гороскоп " VerticalAlignment="Top"/>
        <TextBlock x:Name="IsAdult" HorizontalAlignment="Left" Margin="370,191,0,0" TextWrapping="Wrap" Text="Дорослий " VerticalAlignment="Top" Height="16" RenderTransformOrigin="0.49,0.61"/>
        <TextBlock x:Name="IsBirthday" HorizontalAlignment="Left" Margin="370,216,0,0" TextWrapping="Wrap" Text="День народження " VerticalAlignment="Top"/>
        <TextBox x:Name="FirstName" HorizontalAlignment="Left" Margin="30,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="FirstName_TextChanged"/>
        <TextBox x:Name="LastName" HorizontalAlignment="Left" Margin="30,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="LastName_TextChanged"/>
        <Label  Content="Ім'я" HorizontalAlignment="Left" Margin="30,42,0,0" VerticalAlignment="Top"/>
        <Label  Content="Прізвище" HorizontalAlignment="Left" Margin="30,86,0,0" VerticalAlignment="Top"/>
        <Label Content="Дата народження" HorizontalAlignment="Left" Margin="30,130,0,0" VerticalAlignment="Top"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="30,181,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="30,207,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="Email_TextChanged"/>
        <Button x:Name="ProceedButton" Content="Proceed" HorizontalAlignment="Left" Margin="30,236,0,0" VerticalAlignment="Top" Width="83" Click="ProceedButton_Click" IsEnabled="False"/>
        <Label x:Name="FirstNameAns" Content="Ім'я" HorizontalAlignment="Left" Margin="370,42,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LastNameAns" Content="Прізвище" HorizontalAlignment="Left" Margin="370,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="BirthDayAns" Content="Дата народження" HorizontalAlignment="Left" Margin="370,94,0,0" VerticalAlignment="Top"/>
        <Label x:Name="EmailAns" Content="E-mail" HorizontalAlignment="Left" Margin="370,120,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
